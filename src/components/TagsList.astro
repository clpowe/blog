---
import Tag from './Tag.astro'

import { getCollection } from 'astro:content'
const allPosts = await getCollection('posts')
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())]
---

<div class='tags'>
	{tags.map((tag) => <Tag tag={tag} />)}
</div>

<style>
	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}
</style>
