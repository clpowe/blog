---
const { link, name } = Astro.props
---

<li role='none'>
	<a role='menuitem' class='navlink' href={link}>{name}</a>
</li>

<style>
	.navlink {
		font-family: 'Montserrat', sans-serif;
		font-size: 1rem;
		text-transform: uppercase;
		font-weight: 700;
		text-decoration: none;
		color: black;
		letter-spacing: 0.05;
		transition: color 400ms cubic-bezier(0.23, 1, 0.32, 1);
		width: 100%;
		display: block;
	}

	.navlink:hover {
		color: #7f7f7f;
	}
</style>
